<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--datasource-->
    <beans profile="dev">
        <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
            <property name="url" value="${db.url}"/>
            <property name="username" value="${db.username}"/>
            <property name="password" value="${db.password}"/>
        </bean>
        <!--post process-->
        <bean class="com.dzytsiuk.onlinestore.postprocess.PropertyPlaceholderBeanFactoryPostProcessor"/>
    </beans>
    <beans profile="prod">
        <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
            <property name="url" value="${JDBC_DATABASE_URL}"/>
            <property name="username" value="${JDBC_DATABASE_USERNAME}"/>
            <property name="password" value="${JDBC_DATABASE_PASSWORD}"/>
        </bean>
        <!--post process-->
        <bean class="com.dzytsiuk.onlinestore.postprocess.PropertyPlaceholderBeanFactoryPostProcessor"/>
    </beans>
    <!--dao-->
    <beans profile="dev,prod">
        <bean id="jdbcTemplate" class="com.dzytsiuk.jdbcwrapper.JdbcTemplateImpl">
            <constructor-arg ref="dataSource"/>
        </bean>
        <bean id="productDao" class="com.dzytsiuk.onlinestore.dao.jdbc.JdbcProductDao">
            <property name="jdbcTemplate" ref="jdbcTemplate"/>
        </bean>
        <bean id="userDao" class="com.dzytsiuk.onlinestore.dao.jdbc.JdbcUserDao">
            <property name="jdbcTemplate" ref="jdbcTemplate"/>
        </bean>

        <!--service-->
        <bean id="productService" class="com.dzytsiuk.onlinestore.service.DefaultProductService">
            <property name="productDao" ref="productDao"/>
        </bean>
        <bean id="userService" class="com.dzytsiuk.onlinestore.service.DefaultUserService">
            <property name="userDao" ref="userDao"/>
        </bean>
        <bean id="securityService" class="com.dzytsiuk.onlinestore.security.DefaultSecurityService">
            <property name="userService" ref="userService"/>
            <property name="timeToLive" value="${session.timeToLive}"/>
        </bean>
    </beans>
</beans>