<beans>
    <!--datasource-->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
    <!--dao-->
    <bean id="productDao" class="com.dzytsiuk.onlinestore.dao.jdbc.JdbcProductDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="userDao" class="com.dzytsiuk.onlinestore.dao.jdbc.JdbcUserDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!--service-->
    <bean id="productService" class="com.dzytsiuk.onlinestore.service.DefaultProductService">
        <property name="productDao" ref="productDao"/>
    </bean>
    <bean id="userService" class="com.dzytsiuk.onlinestore.service.DefaultUserService">
        <property name="userDao" ref="userDao"/>
    </bean>
    <bean id="securityService" class="com.dzytsiuk.onlinestore.security.DefaultSecurityService">
        <property name="userService" ref="userService"/>
    </bean>

    <!--factory post processor-->
    <bean class="com.dzytsiuk.onlinestore.postprocess.PropertyPlaceholderBeanFactoryPostProcessor"/>

</beans>